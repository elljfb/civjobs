---
import type { CollectionEntry } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';
import Layout from './Layout.astro';
import { Image } from 'astro:assets';
import { SITE_TITLE } from '../consts';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---
<Layout title={`${title} | ${SITE_TITLE}`} description={description} image={heroImage}>
  <main class="post-layout">
    <article class="prose">
      {heroImage && (
        <Image 
          src={heroImage} 
          alt="" 
          width={1020} 
          height={510} 
          class="post-hero-image"
        />
      )}
      <div class="post-header">
        <h1 class="post-title">{title}</h1>
        <div class="post-meta">
          <FormattedDate date={pubDate} />
          {updatedDate && (
            <span class="last-updated">
              (Last updated: <FormattedDate date={updatedDate} />)
            </span>
          )}
        </div>
      </div>
      <div class="post-content">
        <slot />
      </div>
    </article>
  </main>
</Layout>

<style>
  .post-layout {
    padding: 2rem 0;
  }
  .prose {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  .post-hero-image {
    width: 100%;
    height: auto;
    border-radius: 12px;
    margin-bottom: 2rem;
    box-shadow: var(--box-shadow-md);
  }
  .post-header {
    text-align: center;
    margin-bottom: 2rem;
  }
  .post-title {
    font-size: 2.5rem;
    color: var(--brand-primary);
    line-height: 1.2;
  }
  .post-meta {
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin-top: 1rem;
  }
  .last-updated {
    font-style: italic;
    margin-left: 0.5rem;
  }

  /* Styling for Markdown content */
  .prose :global(h2),
  .prose :global(h3),
  .prose :global(h4) {
    color: var(--brand-primary);
    margin-top: 2em;
    margin-bottom: 1em;
  }
  .prose :global(p) {
    margin-bottom: 1.25em;
    line-height: 1.7;
  }
  .prose :global(a) {
    color: var(--brand-secondary);
    text-decoration: underline;
  }
  .prose :global(a:hover) {
    color: var(--brand-primary);
  }
  .prose :global(ul),
  .prose :global(ol) {
    padding-left: 1.5em;
    margin-bottom: 1.25em;
  }
  .prose :global(li) {
    margin-bottom: 0.5em;
  }
  .prose :global(blockquote) {
    border-left: 4px solid var(--brand-secondary);
    padding-left: 1em;
    margin-left: 0;
    font-style: italic;
    color: var(--text-secondary);
  }
  
  @media (min-width: 768px) {
    .post-title {
      font-size: 3.5rem;
    }
  }
</style>
